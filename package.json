{
  "name": "code-architecture-diagram-mcp",
  "version": "0.1.0",
  "description": "Multi-level code architecture dependency graph analyzer with MCP interface - supports file, module, and component-level views",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "code-arch-mcp": "dist/mcp/server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "start": "node dist/mcp/server.js"
  },
  "keywords": [
    "dependency-graph",
    "architecture",
    "mcp",
    "code-analysis",
    "hierarchical",
    "module-analysis",
    "component-analysis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "tree-sitter": "^0.21.1",
    "tree-sitter-typescript": "^0.21.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
